<Window x:Class="DataBaseManagerWPF.Indexes.IndexTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseManagerWPF.Indexes"
        mc:Ignorable="d"
        Title="Select Index type" Height="163.348" Width="323.517" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <ComboBox x:Name="cmb_index_type" HorizontalAlignment="Left" Margin="92,28,0,0" VerticalAlignment="Top" Width="124" SelectedIndex="0">
            <ListBoxItem x:Name="item_primary" Content="Primary"/>
            <ListBoxItem x:Name="item_unique" Content="Unique"/>
            <ListBoxItem x:Name="item_duplicate" Content="Duplicate"/>
        </ComboBox>
        <Button x:Name="btn_create_index" Content="Create Index" HorizontalAlignment="Left" Margin="92,88,0,0" VerticalAlignment="Top" Width="124" Height="36" Cursor="Hand" Click="btn_create_index_Click"/>

    </Grid>
</Window>
